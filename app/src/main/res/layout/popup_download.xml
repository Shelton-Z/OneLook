<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/popup_download_title"
        android:textColor="#000"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/popup_download_name"
        android:textColor="@color/text_color_deep_gray"
        android:textSize="15sp" />

    <Button
        android:id="@+id/filename_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:background="@drawable/download_filename_edit" />

    <TextView
        android:id="@+id/filename"
        android:layout_width="279dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginStart="-2dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/filename_edit"
        android:layout_toEndOf="@+id/textView2"
        android:ellipsize="middle"
        android:gravity="center_vertical"
        android:maxEms="15"
        android:singleLine="true"
        android:textColor="@color/text_color_deep_gray"
        android:textSize="15sp"
        tool:text="测试.zip" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/filename"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/popup_download_size"
        android:textColor="@color/text_color_deep_gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/file_size"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:gravity="center"
        android:textColor="@color/text_color_deep_gray"
        android:textSize="15sp"
        tool:text="20M" />

    <Button
        android:id="@+id/download_start"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="@string/popup_download_button1"
        android:textColor="@color/colorPrimaryBlue"
        android:textSize="18sp" />
</RelativeLayout>