<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/popup_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#f4f4f4"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/engine_title"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/baidu_engine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:clickable="true"
            android:drawableTop="@drawable/baidu_icon"
            android:drawablePadding="5dp"
            android:focusable="true"
            android:text="@string/engine_name1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/s360_engine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/baidu_engine"
            android:clickable="true"
            android:drawableTop="@drawable/s360_icon"
            android:drawablePadding="5dp"
            android:focusable="true"
            android:text="@string/engine_name2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/biying_engine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="130dp"
            android:layout_toEndOf="@+id/baidu_engine"
            android:clickable="true"
            android:drawableTop="@drawable/biying_icon"
            android:drawablePadding="5dp"
            android:focusable="true"
            android:text="@string/engine_name3"
            android:textSize="12sp" />
    </RelativeLayout>
</FrameLayout>
